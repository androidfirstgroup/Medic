<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${relativePackage}.${activityClass}" >

    <include layout="@layout/header_layout_include"/>    

    <TextView
        android:id="@+id/result_list_help_line1_lbl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top_header_wrapper"
        android:gravity="center_horizontal"
        android:textSize="18sp"
        android:textColor="@color/text_color_blue"
        android:text="@string/result_list_help_text_line1" />

    <TextView
        android:id="@+id/result_list_help_line2_lbl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/result_list_help_line1_lbl"
        android:gravity="center_horizontal"
        android:textColor="@color/text_color_blue"
        android:text="@string/result_list_help_text_line2" />
    
	    <ListView android:id="@android:id/list"
	    	android:layout_width="match_parent" 
	    	android:layout_height="wrap_content"
			android:scrollbars="none"
			android:layout_gravity="fill|center"
	        android:layout_below="@+id/result_list_help_line2_lbl"
			/>

</RelativeLayout>

